<assembly>
    <id>${project.version}</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <includes>
                <include>bin/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>src/main/resources/logback/</directory>
            <outputDirectory>conf/logback/</outputDirectory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>LICENSE-BIN</source>
            <destName>LICENSE</destName>
        </file>

        <file>
            <source>Dockerfile</source>
            <destName>Dockerfile</destName>
        </file>

        <!-- libs -->
        <file>
            <source>target/seata-server.jar</source>
            <outputDirectory>lib/</outputDirectory>
        </file>

        <!-- config files -->
        <file>
            <source>src/main/resources/application.yml</source>
            <outputDirectory>conf/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/application.example.yml</source>
            <outputDirectory>conf/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/logback-spring.xml</source>
            <outputDirectory>conf/</outputDirectory>
        </file>
    </files>
</assembly>
