<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:seata="http://seata.io/schema/seata"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://seata.io/schema/seata
       http://seata.io/schema/seata.xsd">

    <seata:application applicationId="test" txServiceGroup="testaa" mode="1" failureHandler="defaultHandler">
        <seata:globalTransactional name="test" scanPackage="io.seata.spring.schema" pattern="@METHOD:*Biz"/>
        <seata:globalLock lockRetryInterval="2" lockRetryTimes="3" scanPackage="io.seata.spring.schema" pattern="*GlobalLock"/>
    </seata:application>

    <bean id="defaultHandler" class="io.seata.tm.api.DefaultFailureHandlerImpl"/>

</beans>
