<xsd:schema xmlns="http://fescar.org.com/schema/fescar"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:tool="http://www.springframework.org/schema/tool"
	xmlns:beans="http://www.springframework.org/schema/beans"
	targetNamespace="http://fescar.org.com/schema/fescar">

	<xsd:import namespace="http://www.w3.org/XML/1998/namespace" />
	<xsd:import namespace="http://www.springframework.org/schema/tool" />
	<xsd:import namespace="http://www.springframework.org/schema/beans" />

	<!-- 声明一个标签，名字为fescar:txs -->
	<xsd:element name="txs">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="tx" maxOccurs="unbounded" />
			</xsd:sequence>
			<xsd:attribute name="id" type="xsd:string" use="optional" />
			<xsd:attribute name="appId" type="xsd:string" use="required" />
			<xsd:attribute name="txServiceGroup" type="xsd:string" use="required" />
			<xsd:attribute name="mode" type="xsd:int" use="optional" />
			<xsd:attribute name="failureHandler" type="xsd:string" use="optional" />
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="tx">
		<xsd:complexType>
			<xsd:attribute name="name" type="xsd:string" use="required" />
			<xsd:attribute name="timeout" type="xsd:int" use="required" />
			<xsd:attribute name="ref" type="xsd:string" use="optional" />
			<xsd:attribute name="method" type="xsd:string" use="optional" />
			<xsd:attribute name="scan-pakeage" type="xsd:string" use="optional" />
		</xsd:complexType>
	</xsd:element>

</xsd:schema>
